<div class="d-flex justify-content-center m-4">
<h1> <%= @restaurant.name %></h1>
</div>
<div class="d-flex justify-content-center">
<%= "City: #{@restaurant.address}" %> <br><br>

<% @restaurant.reviews.each_with_index do |review, index| %>
  <%= "User Number #{index + 1}. - #{review.content} Rating: #{review.rating}/5" %>
  <br> <br>
<% end %>
</div>


<div class="d-flex justify-content-center m-3">
<%= link_to "Homepage", restaurants_path, class: "btn btn-primary"%>
</div>


<div class="d-flex justify-content-center">
<%= link_to "Add Review",  new_restaurant_review_path(@restaurant), class: "btn btn-primary"%>
</div>
<br>

